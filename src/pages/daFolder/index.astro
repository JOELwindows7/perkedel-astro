        <h3>Automatically fetches and inlines Material Design Icon's "account" SVG</h3>
        <!-- Automatically fetches and inlines Material Design Icon's "account" SVG -->
        <!-- <code><Icon pack="mdi" name="account" /></code> -->
        <Icon height="18px" pack="mdi" name="account" />

        <h3>Equivalent shorthand</h3>
        <!-- Equivalent shorthand -->
        <Icon height="18px" name="mdi:account" />

        <h3>Sprite</h3>
        <!-- Required ONCE per page as a parent of any <Sprite> components! Creates `<symbol>` for each icon -->
        <!-- Can also be included in your Layout component! -->
        <Sprite.Provider>
