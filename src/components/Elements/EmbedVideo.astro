---
export interface Props {
    title?: string;
    src?: string;
    type? : string;
    srcExtra?: Array<Array<string>>;
    // description?: string;
    // keywords?: string;
    width?: string;
    height?: string;
    controls?: string;
    autoplay?: string;
    loop?: string;
    preload?: string;
    poster?:string;
    muted?:string;
    errorSay?: string;
}

const { 
  title = 'embedded video', 
  type = 'video/webm',
  src,
  srcExtra,
  width,
  height,
  controls='controls',
  autoplay,
  loop,
  preload,
  poster = '/assets/img/perkedelbannerrender4KDCI.png',
  muted,
  errorSay = '&#xea87; WERROR! &#xebde; Your browser cannot player HTML video! warm and bad! ðŸ˜­',
//   description = 'Perkedel NTLF+ASTR. Perkedel Technologies on Netflify with Astro framework',
//   keywords = 'tech, fun, novelty, open source, gratis, free',
} = Astro.props.frontmatter || Astro.props as Props;
---
<!-- https://www.w3schools.com/html/html5_video.asp -->
<!-- src e.g. "https://cdn.discordapp.com/attachments/950077002654814229/1018508500512542740/bingbong.webm" -->
<!-- https://www.w3schools.com/tags/tryit.asp?filename=tryhtml_object_video -->

<video title={title} height={height} width={width} controls={controls} autoplay={autoplay} loop={loop} preload={preload} muted={muted} poster={poster}>
    <source src={src} type={type}/>
    {srcExtra.map((sauce:Array<string>)=>(
      <source src={sauce[0]} type={sauce[1]}/>
    ))}
    <p class="error">{errorSay}</p>
</video>