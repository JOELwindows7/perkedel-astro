    function plsCopyThe(thing){
        // to clipboard pls
        // Get the text field
        var thing = location.href;

        // Select the text field
        thing.select();
        thing.setSelectionRange(0, 99999); // For mobile devices

        // Copy the text inside the text field
        navigator.clipboard.writeText(thing.value);
    }
</script>