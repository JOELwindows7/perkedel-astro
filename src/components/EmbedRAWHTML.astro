const{
    title = 'EmbedRAWHTML',
    src,
    srcDoc,
    height = '500px',
    width = '100%',
    style = 'border:none;',
    name,
    allow,
    allowFullScreen,
    allowPaymentRequest,
    loading,
    referrerPolicy,
    sandbox,
    errorSay = '&#xea87; WERROR! &#xebde; Your browser does not support <code>iframe</code>, warm and bad! ðŸ˜­ðŸ˜­ðŸ˜­ðŸ˜­ðŸ˜­ðŸ˜­ðŸ˜­ '
} = Astro.props.frontmatter || Astro.props as Props;
---
<!-- https://www.w3schools.com/tags/tag_iframe.asp -->
<!-- https://www.w3schools.com/tags/att_iframe_srcdoc.asp -->

<iframe 
    src={src} 
    srcdoc={srcDoc}
    width={width} 
    height={height} 
    style={style} 
    name={name} 
    title={title} 
    allowfullscreen={allowFullScreen} 
    allow={allow}
    referrerpolicy={referrerPolicy}
    sandbox={sandbox} 
    >
    <slot>
        <p class="error">{errorSay}</p>
    </slot>
    <slot name="errorSayExtra"/>
</iframe>