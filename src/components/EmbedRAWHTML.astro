export interface Props {
    title?: string;
    src?:string;
    srcDoc?:string;
    height?:string;
    width?:string;
    style?:string;
    name?:string;
    allow?:string;
    allowFullScreen?:boolean;
    allowPaymentRequest?:boolean;
    loading?:string;
    referrerPolicy?:string;
    sandbox?:string;
    errorSay?:string;
