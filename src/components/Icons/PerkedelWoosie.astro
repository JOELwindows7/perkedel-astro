---
export interface Props{
    size?:string;
    sizeX?:string;
    sizeY?:string;
    forceSizeX?:boolean;
    forceSizeY?:boolean;
    classe?:string;
}

const{
    size='64px',
    sizeX=null,
    sizeY=null,
    forceSizeX = false,
    forceSizeY = false,
    classe='',
} = Astro.props.frontmatter || Astro.props as Props;
---
<!-- <img id='PerkedelWoosie-GIF' alt="Perkedel Woosie" src="/favicon_1024.gif" height={size}/> -->
<!-- <img id='PerkedelWoosie' alt="Perkedel Woosie" src="/favicon_2048.png" height={size}/> -->
<picture id='PerkedelWoosiePicture'>
    <source id='PerkedelWoosieJXL' class={`PerkedelWoosie `+ classe} srcset='/favicon_2048.jxl' type='image/jxl' height={size} width={size}/>
    <img id='PerkedelWoosie' class={`PerkedelWoosie `+ classe} alt="Perkedel Woosie" src="/favicon_2048.png" type='image/png' height={(sizeY && sizeY !== '') || forceSizeY?sizeY:size} width={(sizeX && sizeX !== '') || forceSizeX?sizeX:size}/>
</picture>